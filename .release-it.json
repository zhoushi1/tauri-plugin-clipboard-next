{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "pushRepo": "origin"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:bump": "pnpm syncVersion",
    "after:git:release": "pnpm publishCargo"
  }
}