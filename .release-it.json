{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "pushRepo": "origin"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "after:npm:release": "pnpm syncVersion && pnpm publishCargo"
  }
}